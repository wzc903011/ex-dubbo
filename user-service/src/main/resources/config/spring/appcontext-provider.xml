<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans.xsd        http://code.alibabatech.com/schema/dubbo        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 用dubbo协议在随机端口暴露服务 -->
    <dubbo:protocol name="dubbo"/>

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.mingqi.local.userservice.UserQueryRemoteService" ref="userQueryRemoteService">
        <dubbo:method name="queryWithPrimitiveType" loadbalance="uid">
            <dubbo:parameter key="hash.nodes" value="10" />
            <dubbo:parameter key="uid.arguments" value="0"/>
        </dubbo:method>
        <dubbo:method name="queryWithPrimitiveType2" loadbalance="uid">
            <dubbo:parameter key="uid.arguments" value="1"/>
        </dubbo:method>
        <dubbo:method name="queryByUidRequest" loadbalance="uid">
            <dubbo:parameter key="hash.nodes" value="10" />
        </dubbo:method>
        <dubbo:method name="queryBySonUidRequest" loadbalance="uid">
            <dubbo:parameter key="hash.nodes" value="10" />
        </dubbo:method>
        <dubbo:method name="queryByOtherRequest" loadbalance="uid">
            <dubbo:parameter key="hash.nodes" value="10" />
        </dubbo:method>
    </dubbo:service>
</beans>